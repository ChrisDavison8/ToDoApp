<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userActionConfCl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.userActionConfirmationScreen">

    <TextView
        android:id="@+id/userActionConfTv"
        android:layout_width="@dimen/large_input_field_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/todo_general_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/userActionConfBtn"
        android:layout_width="@dimen/small_button_width"
        android:layout_height="@dimen/small_button_height"
        android:layout_marginTop="175dp"
        android:text="@string/user_action_conf_btn_text"
        android:textSize="@dimen/button_text_size"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="@+id/userActionConfTv"
        app:layout_constraintStart_toStartOf="@+id/userActionConfTv"
        app:layout_constraintTop_toBottomOf="@+id/userActionConfTv" />

</androidx.constraintlayout.widget.ConstraintLayout>